#!/usr/bin/env perl

use strict;
use warnings;

use Pod::Html;
use File::Spec::Functions 'catfile';

my ($in, $out) = (
  catfile(qw/RecruiterFAQ.pod/),
  catfile(qw/index.html/));

pod2html(
  "--css" => 'http://search.cpan.org/s/style.css',
  "--title" => 'Perl Recruiters FAQ',
  "--infile" => $in,
  "--outfile" => $out);
